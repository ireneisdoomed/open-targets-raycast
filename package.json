{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "open_targets",
  "title": "Open Targets",
  "description": "An (unofficial) entry point to the Open Targets ecosystem.",
  "icon": "ot-icon.png",
  "author": "ireneisdoomed",
  "license": "MIT",
  "commands": [
    {
      "name": "platform",
      "title": "Search the Platform",
      "description": "Use the search function within Raycast to have a more inmediate access to the Open Targets Platform.",
      "mode": "view",
      "arguments": [
        {
          "name": "input",
          "placeholder": "Enter a term",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.42.2",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
